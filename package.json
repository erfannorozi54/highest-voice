{
  "name": "highest-voice",
  "version": "1.0.0",
  "description": "Smart Contract and an UI for Playing the loudest sound without censorship",
  "main": "index.js",
  "workspaces": [
    "ui"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "node scripts/setup-env.js",
    "clean:local": "rm -rf deployments/localhost artifacts cache ui/.next && node scripts/clean-local-env.js",
    "reset:local": "bash scripts/reset-local.sh",
    "dev": "npm run setup && npm run clean:local && npm run dev:local",
    "dev:local": "concurrently --kill-others-on-fail \"npx hardhat node\" \"sleep 5 && NETWORK=local node scripts/deploy-and-sync.js && npm --prefix ui run dev\"",
    "dev:sepolia": "npm run setup && NETWORK=sepolia node scripts/deploy-and-sync.js && npm --prefix ui run dev",
    "dev:mainnet": "npm run setup && NETWORK=mainnet node scripts/deploy-and-sync.js && npm --prefix ui run dev",
    "deploy:local": "NETWORK=local node scripts/deploy-and-sync.js",
    "deploy:sepolia": "NETWORK=sepolia node scripts/deploy-and-sync.js",
    "deploy:mainnet": "NETWORK=mainnet node scripts/deploy-and-sync.js",
    "deploy:arbitrum": "NETWORK=arbitrum node scripts/deploy-and-sync.js",
    "deploy:arbitrum-sepolia": "NETWORK=arbitrumSepolia node scripts/deploy-and-sync.js",
    "deploy:polygon": "NETWORK=polygon node scripts/deploy-and-sync.js",
    "deploy:polygon-mumbai": "NETWORK=polygonMumbai node scripts/deploy-and-sync.js",
    "deploy:optimism": "NETWORK=optimism node scripts/deploy-and-sync.js",
    "deploy:base": "NETWORK=base node scripts/deploy-and-sync.js",
    "node:start": "npx hardhat node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erfannorozi54/highest-voice.git"
  },
  "author": "Erfan.norozi54@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/erfannorozi54/highest-voice/issues"
  },
  "homepage": "https://github.com/erfannorozi54/highest-voice#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "hardhat": "^2.26.2",
    "hardhat-deploy": "^0.11.45"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@openzeppelin/contracts": "^5.4.0",
    "elliptic": "^6.6.1",
    "zksync-ethers": "^6.20.0"
  },
  "overrides": {
    "elliptic": "^6.6.1",
    "axios": "^1.12.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/contracts-4.7.3": "npm:@openzeppelin/contracts@^5.4.0",
    "@openzeppelin/contracts-4.8.3": "npm:@openzeppelin/contracts@^5.4.0",
    "@chainlink/contracts": {
      "@openzeppelin/contracts": "^5.4.0",
      "@openzeppelin/contracts-upgradeable": "^5.4.0"
    }
  }
}
